<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.edit_lyrics.EditLyricsFragment">

    <TextView
        android:id="@+id/textViewEditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Edit Lyrics"
        android:textColor="@color/secondary1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBackGeneratingLyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEditTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewEditTitle" />


    <EditText
        android:id="@+id/editTextRapSong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="46dp"
        android:fontFamily="@font/poppins"
        android:scrollbars="vertical"
        android:text="I used to be down, no cash flow in sight, Hustled every day, just to make things right, Dreaming 'bout the life, the one I never had, Big house, fancy cars, feeling kind of sad, But now I'm living like a king, pockets always full, Money's coming in, nothing to worry 'bout at all, Rolling in the dough, no more counting pennies, I used to be a broke man, but now I'm living like a wealthy,  I put in the work, now I'm reaping the rewards,  Got a mansion on the hill, and a garage full of cars,  Champagne popping, every night's a celebration,  Used to have no money, now I'm living in elation, But now I'm living like a king, pockets always. full, Money's coming in, nothing to worry 'bout at all, Rolling in the dough, no more counting pennies, I used to be a broke man, but now I'm living like a wealthy, But with great wealth, comes great responsibility."
        android:textColor="@color/secondary1"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditTitle" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:background="@drawable/onboarding_button"
        android:fontFamily="@font/poppins"
        android:text="@string/button_name_save"
        android:textColor="@color/backgorund"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextRapSong"
        app:layout_constraintStart_toStartOf="@+id/editTextRapSong" />

</androidx.constraintlayout.widget.ConstraintLayout>