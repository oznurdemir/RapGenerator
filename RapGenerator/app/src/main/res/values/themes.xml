<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.RapGenerator" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Theme.RapGenerator" parent="Base.Theme.RapGenerator">

        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="MySeekBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/primary2</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>
